{
    // -------------- VScode settings --------------
    "files.autoSave": "afterDelay",
    "editor.fontFamily": "Consolas",
    "editor.fontSize": 16,
    "editor.autoClosingBrackets": "always",
    "editor.bracketPairColorization.enabled": false,
    "editor.fastScrollSensitivity": 10,
    "editor.definitionLinkOpensInPeek": true,
    "editor.autoClosingQuotes": "always",
    "editor.smoothScrolling": true,
    "editor.stickyScroll.enabled": true,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "workbench.commandPalette.preserveInput": true,
    "workbench.list.smoothScrolling": true,
    "workbench.editor.splitInGroupLayout": "vertical",
    "workbench.iconTheme": "eq-material-theme-icons-light",
    "diffEditor.ignoreTrimWhitespace": false,
    "window.commandCenter": true,
    "security.workspace.trust.untrustedFiles": "open",

    // -------------- Mouse settings --------------
    "editor.cursorSmoothCaretAnimation": true,
    "terminal.integrated.cursorBlinking": true,

    // --------------- IntelliSense completely setting ---------------
    "editor.tabCompletion": "on",
    "editor.suggest.preview": true,
    "editor.suggest.localityBonus": true,
    "editor.suggest.shareSuggestSelections": true,
    "editor.suggest.showIcons": true,
    "editor.quickSuggestionsDelay": 3,
    "editor.inlineSuggest.enabled": true,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.wordBasedSuggestionsMode": "allDocuments",
    "editor.parameterHints.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.quickSuggestions":
    {
        "other": "on",
        "comments": "on",
        "strings": "on"
    },

    // --------------- Terminal settings ---------------
    "terminal.integrated.fontFamily": "Fira code",
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.gpuAcceleration": "off",
	"terminal.integrated.fontWeight": "500",
    "terminal.integrated.smoothScrolling": false,
    "audioCues.terminalQuickFix": "on",

    // file setting
    "window.doubleClickIconToClose": true,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.autoSaveDelay": 500,

    // Forcus mode zenMode
    "zenMode.hideLineNumbers": false,
    // "interactive.input.focus": true,
    // "interactive.history.focus": true,

    // --------------- Json settings ---------------
    "json.maxItemsComputed": 100000,
    "[jsonc]":
    {
        "editor.quickSuggestions": { "strings": true },
        "editor.suggest.insertMode": "replace"
    },

    // ------------------------- Custom color ----------------------------
    // workbench
    "workbench.colorCustomizations":
    {
        "input.border": "#1F51FF",
        "terminal.foreground": "#d7d7d7",
        "terminalCursor.background": "#00FF7F",
        "terminalCursor.foreground": "#FFFFF0",
        "terminal.ansiGreen": "#00FF7F",
        "terminal.ansiMagenta": "#FFFFF0",
        "terminal.ansiYellow": "#FFFFF0",
        "terminal.ansiCyan": "#CF9FFF",
        "terminal.ansiBrightCyan": "#FFFFF0",
        "tab.activeBorder": "#1F51FF",
        "tab.hoverForeground": "#F5F5F5"
    },

