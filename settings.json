{
    // -------------- VScode settings --------------
    "files.autoSave": "afterDelay",
    "editor.fontFamily": "Consolas",
    "editor.fontSize": 16,
    "editor.autoClosingBrackets": "always",
    "editor.bracketPairColorization.enabled": false,
    "editor.fastScrollSensitivity": 7,
    "editor.definitionLinkOpensInPeek": true,
    "editor.autoClosingQuotes": "always",
    "editor.smoothScrolling": true,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "window.confirmBeforeClose": "always",
    "screencastMode.onlyKeyboardShortcuts": true,
    "workbench.commandPalette.preserveInput": true,
    "workbench.list.smoothScrolling": true,
    "workbench.editor.splitInGroupLayout": "vertical",
    "workbench.iconTheme": "eq-material-theme-icons-light",
    // "window.commandCenter": true,

    // -------------- Mouse settings --------------
    "editor.cursorSmoothCaretAnimation": true,
    "terminal.integrated.cursorBlinking": true,

    // --------------- IntelliSense completely setting ---------------
    "editor.suggest.preview": true,
    "editor.tabCompletion": "on",
    "editor.suggest.shareSuggestSelections": true,
    "editor.suggest.showIcons": true,
    "editor.quickSuggestionsDelay": 3,
    "editor.inlineSuggest.enabled": true,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.wordBasedSuggestionsMode": "allDocuments",
    "editor.parameterHints.enabled": true,
    "editor.quickSuggestions":
    {
        "other": "on",
        "comments": "on",
        "strings": "on"
    },

    // --------------- Terminal settings ---------------
    "terminal.integrated.fontFamily": "Fira Code",
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.gpuAcceleration": "off",
    "security.workspace.trust.untrustedFiles": "open",
	"terminal.integrated.fontWeight": "500",

    // file setting
    "window.doubleClickIconToClose": true,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.autoSaveDelay": 500,

    // --------------- Json settings ---------------
    "json.maxItemsComputed": 100000,
    "[jsonc]":
    {
        "editor.quickSuggestions": { "strings": true },
        "editor.suggest.insertMode": "replace"
    },

    // ------------------------- Custom color ----------------------------
    // workbench
    "workbench.colorCustomizations":
    {
        // search border
        "input.border": "#222e3e",

        // terminal
        "terminal.foreground" : "#d7d7d7",
        "terminalCursor.background":"#00ff80",
        "terminalCursor.foreground":"#fff",
        "terminal.ansiGreen":"#00ff80",
        "terminal.ansiMagenta":"#fff",
        "terminal.ansiYellow":"#fff",
        "terminal.ansiCyan":"#ce9de8",
        "terminal.ansiBrightCyan":"#fff",

        // tab
        "tab.activeBorder": "#00ff80",
        "tab.hoverForeground": "#f5f5f5"
    },

